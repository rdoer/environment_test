<p id="notice"><%= notice %></p>

<h1>Heroku Library</h1>
<br>
<br>
<%= link_to 'New Book', new_book_path %>
<br>
<br>
<table align = "left">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td>$ <%= book.price %></td>
        <td><%= book.published %></td>
 
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Delete', delete_book_path(book) %></td> 
                                   
      </tr>
      <% end %>
  </tbody>
</table>




